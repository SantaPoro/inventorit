{
	"name": "@trello-burndown/backend",
	"version": "0.0.0",
	"repository": "trello-burndown/backdown",
	"main": "lib/index.js",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "tsc",
		"clean": "rimraf dist",
		"dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
		"lint": "yarn eslint --ext .ts . && yarn prettier:check",
		"lint:fix": "eslint --ext .ts,.tsx --fix . && yarn prettier:format",
		"prettier:format": "prettier --write --ignore-path ../../.gitignore --loglevel error \"**/*.{js,jsx,json,yml,yaml}\"",
		"prettier:check": "prettier --list-different --ignore-path ../../.gitignore \"**/*.{js,jsx,json,yml,yaml}\"",
		"start": "node dist/index.js",
		"test": "jest --passWithNoTests"
	},
	"dependencies": {
		"@types/graphql": "^14.5.0",
		"apollo-server": "^2.11.0",
		"dotenv": "^8.2.0",
		"graphql": "^14.6.0",
		"pg": "^7.18.2",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^0.17.6",
		"typeorm": "^0.2.24"
	},
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/graphql": "^14.5.0",
		"@types/node": "^12.12.31",
		"ts-node-dev": "^1.0.0-pre.44"
	}
}
